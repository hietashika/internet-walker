{
	"extends": "astro/tsconfigs/strict",
	"include": [
		".astro/types.d.ts",
		"**/*"
	],
	"exclude": [
		"dist"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@elements/*": [
				"./src/components/elements/*"
			],
			"@layouts/*": [
				"./src/layouts/*"
			],
			"@styles/*": [
				"./src/styles/*"
			],
			"@images/*": [
				"./src/assets/images/*"
			],
			"@icons/*": [
				"./src/assets/icons/*"
			]
		}
	}
}