---
import Button from "@components/Button.astro";
import GridStack from "./elements/GridStack.astro";
---

<header class="header">
  <div class="logo">
    <svg
      width="44"
      height="44"
      viewBox="0 0 44 44"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <!-- 簡易的なグローブアイコン -->
      <circle
        cx="22"
        cy="22"
        r="20"
        stroke="#2563eb"
        stroke-width="3"
        fill="#dbeafe"></circle>
      <path
        d="M12 22 C12 14 22 10 32 22"
        stroke="#2563eb"
        stroke-width="2"
        fill="none"></path>
      <path
        d="M12 22 C12 30 22 34 32 22"
        stroke="#2563eb"
        stroke-width="2"
        fill="none"></path>
      <path d="M22 2 L22 42" stroke="#2563eb" stroke-width="2" fill="none"
      ></path>
      <path d="M2 22 L42 22" stroke="#2563eb" stroke-width="2" fill="none"
      ></path>
    </svg>
  </div>
  <div class="title">
    <h1>InternetWalker</h1>
  </div>
  <GridStack horizontal>
    <Button href="/" variant="tertiary" size="small" type="vertical">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9 22V12h6v10"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
      ホーム
    </Button>
    <Button href="/articles" variant="tertiary" size="small" type="vertical">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M4 19.5A2.5 2.5 0 016.5 17H20"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M6.5 2H20v20H6.5A2.5 2.5 0 014 19.5v-15A2.5 2.5 0 016.5 2z"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
      記事一覧
    </Button>
    <Button href="/about" variant="tertiary" size="small" type="vertical">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M12 16v-4"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <circle cx="12" cy="8" r="1" fill="currentColor"></circle>
      </svg>
      サイトについて
    </Button>
  </GridStack>
</header>

<style lang="scss">
  .header {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-auto-flow: column;
    gap: var(--space-xs);
    align-items: center;
    padding: var(--space-m) var(--space-xl);
    border-bottom: 1px solid #e2e8f0;
    background-color: #f8fafc;
  }

  .title h1 {
    color: #1e40af;
    font-size: 1.5rem;
    font-weight: 700;
  }
</style>
