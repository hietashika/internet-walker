---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Head from "@layouts/Head.astro";
import "@styles/global.scss";
interface Props {
	pageTitle: string;
}

const { pageTitle } = Astro.props;
---

	<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<Head pageTitle={pageTitle} />
	</head>
	<body>
		<!-- ヘッダー -->
		<Header class="header" />

	<!-- AstroSlot でページの内容を表示 -->
	 <main class="main">
		<slot />
	 </main>
		<!-- フッター -->
		<Footer class="footer" />
	</body>
</html>

<style lang="scss">
	body {
		display: grid;
		grid-template-rows: auto 1fr auto;
		grid-template-areas:
			"header"
			"main"
			"footer";
		min-block-size: 100dvh;
	}

	header {
		grid-area: header;
	}

	main {
		grid-area: main;
	}

	footer {
		grid-area: footer;
	}
</style>
